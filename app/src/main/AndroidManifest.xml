<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bengroseclose.sleuthinspace">

    <uses-permission
        android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sleuth_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sleuth_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsPage" />
        <activity android:name=".Leaderboard" />
        <activity android:name=".Game"></activity>
    </application>

</manifest>